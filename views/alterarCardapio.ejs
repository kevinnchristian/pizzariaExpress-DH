<!DOCTYPE html>
<html lang="en">

<%- include('includes/head', {title: "P3Q - Alteração Cardápio"}) %>

<body>

  <%- include('includes/header') %>

  <main class="container mt-5 d-flex flex-column justify-content-center align-items-center">
    <div class="row">

      <form action="/cardapio/alterar?_method=PUT" method="POST" class="form-cadastro">
        <h2>Alterar Pizzas</h2>
        <input type="number" value="<%= posicao %>" name="posicao" hidden readonly>
        <div class="form-group">
          <label for="nomePizza">Nome da Pizza</label>
          <input type="text" class="form-control" id="nomePizza" name="nomePizza" value="<%= pizza.nome %>">
        </div>
        <div class="form-group">
          <label for="precoPizza">Preço da Pizza</label>
          <input type="number" class="form-control" id="precoPizza" name="precoPizza" value="<%= pizza.preco %>">
        </div>
        <button type="submit" class="btn btn-primary">Finalizar Alteração</button>
      </form>

      <% if(typeof(msg) != 'undefined') { %>
      <div class="d-flex justify-content-end">
        <div class="alert alert-sucess"> 
          <%= msg %>
        </div>
      </div>
    </div>
  <% } %>

  </main>

  <%- include('includes/footer') %>

</body>

</html>