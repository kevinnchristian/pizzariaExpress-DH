<!DOCTYPE html>
<html lang="en">

<%- include('includes/head', {title: "P3Q - Cadastro Cardápio"}) %>

<body>

  <%- include('includes/header') %>

  <main class="container mt-5 d-flex justify-content-center align-items-center">
    <div class="row">

      <form action="/cardapio/cadastro" method="POST" enctype="multipart/form-data" class="form-cadastro">
        <h2>Cadastrar Pizzas</h2>

          <div class="form-group">
            <label for="nomePizza">Nome da Pizza</label>
            <input type="text" class="form-control input-form" id="nomePizza" name="nomePizza">
          </div>

          <div class="form-group">
            <label for="precoPizza">Preço da Pizza</label>
            <input type="number" class="form-control input-form" id="precoPizza" name="precoPizza">
          </div>

          <div class="form-group">
            <label for="fotoPizza">Foto da Pizza</label>
            <input type="file" class="form-control input-form input-file" id="fotoPizza" name="fotoPizza">
          </div>

          <button type="submit" class="button-form">Cadastrar</button>

      </form>

    </div>
  </main>

  <%- include('includes/footer') %>

</body>

</html>